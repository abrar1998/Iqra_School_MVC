            </div> *@
        </div>
    </section>

    <!-- JS Script to handle button click and show loader -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var btnSubmit = document.getElementById('btnSubmit');
            var loader = document.getElementById('loader');

            if (btnSubmit) {
                btnSubmit.addEventListener('click', function(event) {
                    // Prevent form submission to allow showing loader first
                    event.preventDefault();
                    loader.style.display = 'flex';

                    // Submit the form after a brief delay to allow the loader to be visible
                    setTimeout(function() {
                        event.target.closest('form').submit();
                    }, 500);
                });
            }
        });
    </script>

    <!-- jQuery Script -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- Your custom JavaScript for login behavior -->
    <script src="~/js/LoginJs.js" asp-append-version="true"></script>

</body>
