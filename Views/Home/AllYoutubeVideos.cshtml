@model IEnumerable<SchoolProj.Models.DTO.YoutubeDTO>

@{
    ViewData["Title"] = "AllYoutubeVideos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<section class="about-section overflow-hidden py-4 py-md-5" style="background: url('/Images/welcome-bg.svg')
no-repeat; background-size: cover; background-position: center;">
<div class="container-fluid">
    <div class="container">
        <div class="youtube-videos-section container d-flex justify-content-center align-items-center">
            <!-- Header Section -->
            <div class="row">
                <div class="text-center mb-2">
                    <h1 class="section-title">Iqra Educational Institute</h1>
                    <p class="section-subtitle">
                        Welcome to the official video gallery of Iqra Educational Institute. Explore our latest events,
                        educational sessions, and insights into the learning experiences we offer to our students.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="container mb-5">
        <div class="row gy-4" id="videoCardsContainer">
            <!-- Video cards will be inserted dynamically here -->
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="video-card shadow">
                        <div class="video-thumbnail">
                            <iframe src="https://www.youtube.com/embed/@item.VideoId" title="YouTube video" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        </div>
                        <div class="video-info">
                            <p class="video-title">item.Title</p>
                            <p class="video-description">item.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    
</div>
</section>