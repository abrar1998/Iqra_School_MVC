@model SchoolProj.Models.DTO.IndexPageViewModel



@if (ViewBag.IndexCarousel == true)
{
    <div class="carousel-header">
        <div id="carouselId" class="carousel slide" data-bs-ride="carousel">
            <ol class="carousel-indicators">
                <li data-bs-target="#carouselId" data-bs-slide-to="0" class="active"></li>
                <li data-bs-target="#carouselId" data-bs-slide-to="1"></li>
                <li data-bs-target="#carouselId" data-bs-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img src="~/Images/iqrabg.jpg" class="img-fluid" alt="Image">
                    <div class="carousel-caption">
                        <div class="p-3" style="max-width: 900px;">
                            <h2 class="text-white text-uppercase fw-bold mb-4" style="letter-spacing: 3px;">Welcome to Crescent Public School Srinagar</h2>
                            <h6 class=" text-capitalize text-white mb-4">Inspiring Young Minds</h6>
                            <p class="mb-5 fs-5">We are dedicated to providing a nurturing environment that fosters learning, growth, and creativity. Join us on a journey to excellence and discovery.</p>
                            <div class="d-flex align-items-center justify-content-center">
                                <a class="btn-hover-bg btn btn-primary rounded-pill text-white py-3 px-3"
                                   routerLink="/Home/aboutus">Learn More</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/Images/iqrabg.jpg" class="img-fluid" alt="Image">
                    <div class="carousel-caption">
                        <div class="p-3" style="max-width: 900px;">
                            <h4 class="text-white text-uppercase fw-bold mb-4" style="letter-spacing: 3px;">Unlock Your Potential</h4>
                            <h6 class=" text-capitalize text-white mb-4">Quality Education for Future Leaders</h6>
                            <p class="mb-5 fs-5">Our curriculum is designed to challenge and inspire students, empowering them to achieve academic and personal success.</p>
                            <div class="d-flex align-items-center justify-content-center">
                                <a class="btn-hover-bg btn btn-primary rounded-pill text-white py-3 px-5" href="#">Explore Programs</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/Images/iqrabg.jpg" class="img-fluid" alt="Image">
                    <div class="carousel-caption">
                        <div class="p-3" style="max-width: 900px;">
                            <h4 class="text-white text-uppercase fw-bold mb-4" style="letter-spacing: 3px;">Join Our Community</h4>
                            <h6 class=" text-capitalize text-white mb-4">A Place for Every Dream</h6>
                            <p class="mb-5 fs-5">Our school is a vibrant community where students are encouraged to dream big, pursue their passions, and make lifelong friends.</p>
                            <div class="d-flex align-items-center justify-content-center">
                                <a class="btn-hover-bg btn btn-primary rounded-pill text-white py-3 px-5" href="#">Get Started</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
                <span class="carousel-control-prev-icon btn bg-primary" aria-hidden="false"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">
                <span class="carousel-control-next-icon btn bg-primary" aria-hidden="false"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
}
else
{
    <div class="carousel-header">
        <div id="carouselId" class="carousel slide" data-bs-ride="carousel">
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.Sliders.Count; i++)
                {
                    <li data-bs-target="#carouselId" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                }
            </ol>
            <div class="carousel-inner" role="listbox">
                @for (int i = 0; i < Model.Sliders.Count; i++)
                {
                    var slider = Model.Sliders[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img src="@Url.Content(slider.SliderImage)" class="img-fluid" alt="Image" loading="lazy">
                        <div class="carousel-caption">
                            <div class="p-3" style="max-width: 900px;">
                                <h2 class="text-white text-uppercase fw-bold mb-4" style="letter-spacing: 3px;">@slider.SLiderTitle</h2>
                                @* <h6 class="text-capitalize text-white mb-4">@slider.Subtitle</h6> *@
                                <p class="mb-5 fs-5">@slider.SliderDesc</p>
                                <div class="d-flex align-items-center justify-content-center">
                                    @* <a class="btn-hover-bg btn btn-primary rounded-pill text-white py-3 px-3" *@
                                    @*    href="@slider.ButtonLink">@slider.ButtonText</a> *@
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
                <span class="carousel-control-prev-icon btn bg-primary" aria-hidden="false"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">
                <span class="carousel-control-next-icon btn bg-primary" aria-hidden="false"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
}


@* carousel end *@


