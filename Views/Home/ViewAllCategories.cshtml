@model IEnumerable<SchoolProj.Models.Domain.Photos>

@{
    ViewData["Title"] = "ViewAllCategories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Page Header Start *@
<div class="container-fluid bg-breadcrumb"
     style="background: linear-gradient(rgba(19, 53, 123, 0.5), rgba(19, 53, 123, 0.5)), url('/Images/iqrabg.jpg'); background-size: cover; background-position: center;">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="text-white mb-4 header-title">
            Album List
        </h3>
    </div>
</div>
@* Page Header End *@
<section class="about-section overflow-hidden py-4 py-md-5" style="background: url('/Images/welcome-bg.svg') no-repeat; background-size: cover; background-position: center;">

<div class="container-fluid mt-5" >
    <div class="row">
        <div class="col text-center mb-4">
            <h2 class="text-primary section-title"><i class="fas fa-images"></i> Iqra Educational Institute Gallery</h2>
            <p class="section-description">
                Welcome to the official video gallery of Iqra Educational Institute. Explore our latest events,
                educational sessions, and insights into the learning experiences we offer to our students.
            </p>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var category in Model)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card category-card shadow-sm">
                    <a href="@Url.Action("ViewImages", "Home", new { pcidfk = category.PCIDFK })" class="text-decoration-none">
                        <div class="card-img-container">
                            <img src="@category.ThumbNail" alt="@category.PhotoCatName" class="card-img-top" loading="lazy">
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title text-dark category-title">@category.PhotoCatName</h5>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>

    @* <!-- Load More Button --> *@
    @* <div class="row mt-4"> *@
    @*     <div class="col text-center"> *@
    @*         <button id="loadMore" class="btn btn-primary btn-lg load-more-btn">Load More</button> *@
    @*     </div> *@
    @* </div> *@
</div>
</section>
<style>
    /* General Typography */
    .header-title {
        font-family: 'Poppins', sans-serif;
        font-weight: 700;
        text-shadow: 3px 3px 8px rgba(0, 0, 0, 0.7);
        text-transform: uppercase;
        letter-spacing: 3px;
    }

    .section-title {
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .section-description {
        font-family: 'Roboto', sans-serif;
        font-size: 16px;
        color: #666;
        line-height: 1.6;
    }

    /* Card Styling */
    .category-card {
        border: none;
        border-radius: 8px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        }

    .card-img-container {
        overflow: hidden;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

        .card-img-container img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .card-img-container:hover img {
            transform: scale(1.1);
        }

    .category-title {
        font-family: 'Poppins', sans-serif;
        font-weight: 500;
        font-size: 18px;
        margin-top: 10px;
        color: #333;
    }

        .category-title:hover {
            color: #0056b3;
        }

    /* Load More Button */
    .load-more-btn {
        font-family: 'Poppins', sans-serif;
        padding: 10px 20px;
        font-size: 18px;
        border-radius: 5px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .load-more-btn:hover {
            background-color: #003580;
            transform: scale(1.05);
        }

    /* Breadcrumb Background */
    .bg-breadcrumb {
        height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

</style>