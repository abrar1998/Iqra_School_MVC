@model IEnumerable<SchoolProj.Models.Domain.Photos>

@{
    ViewData["Title"] = "ViewImages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* page header start *@

<div class="container-fluid bg-breadcrumb" style="background: linear-gradient(rgba(19, 53, 123, 0.5), rgba(19, 53, 123, 0.5)), url('/Images/iqrabg.jpg'); background-size:cover;">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="text-white mb-4" style="
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
            text-shadow: 3px 3px 8px rgba(0, 0, 0, 0.7);
            text-transform: uppercase;
            letter-spacing: 3px;
        ">

            Photo Album
        </h3>
    </div>
</div>

@* page header end *@

<div class="container-fluid mt-4 mb-5" style="margin-bottom:200px;">
    <div class="row">
        <div class="col text-center mb-5">
            <h2 class="text-primary">
                 <i class="fas fa-images"></i> Explore all images under the "@ViewBag.PhotoCategoryName "
            </h2>
            @* <p class="text-muted">Explore all images under the "@ViewBag.PhotoCategoryName "</p> *@
        </div>
    </div>
    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var image in Model)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card shadow-sm">
                        <a href="@image.PhotoPath" target="_blank" class="text-decoration-none" loading="lazy">
                            <img src="@image.PhotoPath" alt="@image.Title" class="card-img-top" style="height: 200px; object-fit: cover;">
                        </a>
                        <div class="card-body text-center">
                            <h5 class="card-title text-dark">@image.Title</h5>
                            <p class="card-text text-muted">@image.Description</p>
                            @* <p class="text-muted"><i class="fas fa-calendar-alt"></i> @image.DateUploaded.ToString("dd MMM yyyy")</p> *@
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col text-center">
                <p class="text-muted">No images found in this category.</p>
            </div>
        </div>
    }
</div>